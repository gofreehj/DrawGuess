{
  "name": "drawguess",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "NEXT_BUNDLE_ANALYZE=true next build",
    "build:standalone": "BUILD_STANDALONE=true next build",
    "build:production": "NODE_ENV=production npm run clean && npm run type-check && npm run lint && npm run build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start -p ${PORT:-3000}",
    "start:docker": "NODE_ENV=production next start -H 0.0.0.0 -p ${PORT:-3000}",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:check": "eslint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf .next out .turbo",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "db:init": "node -e \"require('./src/lib/init-database.ts')\"",
    "db:backup": "cp ./data/game.db ./data/backups/game-$(date +%Y%m%d-%H%M%S).db",
    "health-check": "node -e \"console.log('Health check passed'); process.exit(0)\"",
    "health-check:full": "curl -f http://localhost:${PORT:-3000}/api/health || exit 1",
    "security-check": "npm audit --audit-level moderate",
    "prestart:prod": "npm run db:init",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully at' $(date)",
    "deploy:check": "npm run type-check && npm run lint:check && npm run security-check",
    "deploy:build": "npm run deploy:check && npm run build:production",
    "docker:build": "docker build -t drawing-game .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production drawing-game",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up --build -d",
    "vercel:deploy": "vercel",
    "vercel:deploy:prod": "vercel --prod",
    "vercel:env": "vercel env ls",
    "vercel:logs": "vercel logs",
    "deploy:vercel": "npm run deploy:check && vercel --prod",
    "deploy:preview": "npm run deploy:check && vercel",
    "supabase:setup": "bash scripts/setup-supabase.sh",
    "supabase:check": "node scripts/check-supabase-config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mobile": "playwright test --project=mobile",
    "test:e2e": "playwright test",
    "mobile:dev": "next dev --experimental-https",
    "mobile:build": "NEXT_PWA=true next build",
    "mobile:analyze": "npm run build:analyze && npx @next/bundle-analyzer .next/static/chunks/*.js"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.76.1",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "canvas": "^3.2.0",
    "dexie": "^4.0.8",
    "fabric": "^6.7.1",
    "framer-motion": "^12.0.0",
    "hammerjs": "^2.0.8",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-intersection-observer": "^9.13.1",
    "web-vitals": "^4.2.4",
    "workbox-precaching": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0",
    "workbox-webpack-plugin": "^7.1.0",
    "workbox-window": "^7.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/fabric": "^5.3.10",
    "@types/hammerjs": "^2.0.45",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/web": "^0.0.164",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
