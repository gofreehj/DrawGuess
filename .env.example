# AI Service Configuration
# Choose either 'openai' or 'gemini' as your AI provider
AI_PROVIDER=openai

# OpenAI Configuration (if using AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1

# Gemini Configuration (if using AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# AI Model Configuration
AI_MODEL=gpt-4-vision-preview

# Database Configuration
DATABASE_PATH=./data/game.db

# Application Configuration
NEXT_PUBLIC_APP_NAME=DrawGuess
NEXT_PUBLIC_MAX_DRAWING_SIZE=1024

# Production Environment Variables (set these in production)
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=0

# Security settings (required for production)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Performance settings
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000
